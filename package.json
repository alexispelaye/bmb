{
  "name": "bmb",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "docker:up": "sudo docker compose --env-file ./backend/.env up -d",
    "docker:down": "sudo docker compose --env-file ./backend/.env down",
    "docker:delete": "sudo docker compose --env-file ./backend/.env down -v",
    "backend:start": "cd backend && npm run start",
    "frontend:start": "cd frontend && npm run start",
    "start": "concurrently -n backend,frontend -c 'blue.bold,magenta.bold' 'npm run backend:start' 'npm run frontend:start'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alexispelaye/bmb"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/alexispelaye/bmb/issues"
  },
  "homepage": "https://github.com/alexispelaye/bmb#readme",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "dependencies": {
    "concurrently": "^9.2.1"
  }
}
